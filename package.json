{
  "private": true,
  "name": "kindly-website",
  "version": "0.0.0",
  "description": "The website of Kindly",
  "scripts": {
    "build": "parcel build src/*.html",
    "start": "parcel serve src/*.html",
    "check:css": "stylelint '**/*.css' --ignore-path .gitignore",
    "check:format": "prettier '**/*.{css,html,js,json,md,yml}' --check --ignore-path .gitignore",
    "check:js": "eslint '**/*.js' --ignore-path .gitignore",
    "check": "npm-run-all check:*",
    "test": "npm run check",
    "format": "prettier '**/*.{css,html,js,md,yml}' --write --ignore-path .gitignore"
  },
  "devDependencies": {
    "@parcel/resolver-glob": "^2.2.1",
    "@signal-noise/stylelint-scales": "^2.0.3",
    "autoprefixer": "^10.4.2",
    "eslint": "^8.8.0",
    "npm-run-all": "^4.1.5",
    "parcel": "^2.2.1",
    "postcss": "^8.4.6",
    "postcss-logical": "^5.0.3",
    "postcss-nesting": "^10.1.2",
    "posthtml-include": "^1.7.2",
    "prettier": "2.5.1",
    "sharp": "^0.29.3",
    "stylelint": "^14.3.0",
    "stylelint-config-prettier": "^9.0.3",
    "stylelint-config-standard": "^24.0.0",
    "stylelint-order": "^5.0.0",
    "stylelint-use-logical-spec": "^3.2.2"
  }
}
